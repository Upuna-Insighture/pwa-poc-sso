{
  "rewrites": [
    {
      "source": "/auth/login/success",
      "destination": "/api/auth/login/success"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",  // Applies headers to all routes
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "https://pwa-poc-sso-client.vercel.app"
        },
        {
          "key": "Access-Control-Allow-Credentials",
          "value": "true"
        }
      ]
    }
  ]
}
